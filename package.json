{
  "name": "hangout",
  "version": "1.0.0",
  "description": "hangout is a social forum for discussions",
  "main": "index.js",
  "author": "Utibeabasi Ekong <kamounation@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev:start": "nodemon",
    "dev:docker:start": "docker-compose -f docker-compose-dev.yml up",
    "dev:docker:stop": "docker-compose -f docker-compose-dev.yml down",
    "build": "swc src -d app --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "prod:start": "node app/server.js",
    "clean": "rm -r app && rm -r logs",
    "start": "npm run build & prod:start"
  },
  "dependencies": {
    "@dolphjs/dolph": "^1.0.2",
    "@types/joi": "^17.2.3",
    "cloudinary": "^1.41.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express-rate-limiter": "^1.3.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "mjml": "^4.14.1",
    "moment": "^2.29.4",
    "mongoose-paginate-v2": "^1.7.4",
    "nodemailer": "^6.9.5",
    "passport": "^0.6.0",
    "passport-google-oauth2": "^0.2.0",
    "socket.io": "^4.7.2",
    "toobusy-js": "^0.5.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.91",
    "@types/express": "^4.17.18",
    "@types/mjml": "^4.7.2",
    "@types/node": "^20.8.2",
    "@types/nodemailer": "^6.4.11",
    "@types/passport": "^1.0.13",
    "@types/passport-google-oauth2": "^0.1.6",
    "@types/toobusy-js": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-security": "^1.7.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
